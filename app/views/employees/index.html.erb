<h1>Listing Employees</h1>

<% if @employees.length == 0 %>
    <p> There are no employees at this time. <p>
<% else %>

    <table class="table table-bordered table-responsive table-sm table-hover">

    <thead>
        <tr>
        <th colspan="3"></th>
        </tr>
    </thead>
        
    <tbody>
        <tr> 
        <td><strong>ID</strong></td>
        <td><strong>Name</strong></td>
        <td><strong>Department</strong></td>
        <td><strong>Delete?</td>
        </tr>

        <% @employees.each do |employee| %>
          <tr>
            <td><a href="employees/<%=employee.id%>/edit"><%= employee.id %></a>
            <td><%= employee.name %></td>
            <td><%= employee.department %></td>
            <% if current_user.role === "Admin" %>
                <td><a href="/employees/<%=employee.id%>/delete">X</a></td>
            <% else %>
                <td></td>             
            <% end %>    
          </tr>
        <% end %>
    </tbody>
    </table>

  <% end%>
<br>

