<h2><%= current_user.name %></h2>
<h2><%= current_user.role %></h2>


<% if @employee.errors.any? %>
<div id="error_explanation" class="field_with_errors">
  <h2>There were some errors:</h2>
  <ul>
    <% @employee.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_for(@employee) do |f| %>

    <div class="form-group<%= ' field_with_errors' if @employee.errors[:name].any? %>">
      <%= f.label :name, "Name" %><br>
      <%= f.text_field :name, class: "form-control" %></div>
   
    <div class="form-group">
      <%= f.label :department, "Department" %><br>
      <%= f.text_field :department, class: "form-control" %></div>
  
      <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>