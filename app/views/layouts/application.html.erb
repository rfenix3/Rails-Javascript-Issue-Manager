<!DOCTYPE html>
<html>
  <head>
    <title>RubyRailsCrudIssueManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> 

  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if !current_user %>
            <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
          <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li><%= link_to "Hello, #{current_user.name}!"%></li>
              <% if current_user.role == "Admin" %>
                <li><%= link_to 'All Users', users_path %></li>
                <li><%= link_to 'Create New User', new_user_path %></li>
              <% end %>

              <li><%= link_to "Issues", issues_path %></li>
              <li><%= link_to "Log Out", signout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Sign Up", new_user_path %></li>
              <li><%= link_to "Sign In", signin_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="wrapper">
      <img src="/images/rf_company.png" class="img-responsive main-image" alt="Company logo" height="126" width="126"> 
      <h1>Ruby Rails CRUD Issue Manager</h1>

      <%= yield %>

      <footer class="branding">
        <small>&copy; 2018 <strong>RailsCrudIssueManager by Richard Fenix</strong></small>
      </footer>

    </div>


  </body>
</html>
