
<%= form_for @user, url: {action: "create"}, method: "post" do |f| %>

  <% if @user.errors.any? %>
    <% byebug %>
    <div id="error_explanation" class="field_with_errors">
    <h2>There were some errors:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name, "Select your name" %><br>
      <%= f.select "name", options_from_collection_for_select(User.all, "name", "name"), include_blank: true %>
    </div>
  
    <div class="form-group<%= ' field_with_errors' if @user.errors[:name].any? %>">
      <%= f.label :password, "Enter your password" %><br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    </div>
  <% end %><br>

  <div>
  <p><%= link_to "Login via Github", "/auth/github" %></p>
  </div>