<h1>Listing users</h1>

<% if @users.length == 0 %>
    <p> There are no users at this time. <p>
<% else %>

    <table class="table">
    <thead>
        <tr>
        <th colspan="3"></th>
        </tr>
    </thead>
        
    <tbody>
        <tr> 
        <td><strong>Name</strong></td>
        <td><strong>Password</strong></td>
        <td><strong>Role</strong></td>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.password %></td>
            <td><%= user.role %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

  <% end%>
<br>

<p><%= link_to 'New Users', new_user_path %></p>
