<h2><%= current_user.name if current_user %></h2>
<h2><%= current_user.role  if current_user %></h2>

<% if @user.errors.any? %>
<div id="error_explanation" class="field_with_errors">
  <h2>There were some errors:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for(@user) do |f| %>

    <div class="form-group<%= ' field_with_errors' if @user.errors[:name].any? %>">
      <%= f.label :name, "Name" %><br>
      <%= f.text_field :name, class: "form-control" %></div>
  
    <div class="form-group">
      <%= f.label :password, "Password" %><br>
      <%= f.password_field :password, class: "form-control" %></div>
  
    <div class="form-group">
      <%= f.label :role, "Role" %><br>
      <%= f.text_field :role, class: "form-control" %></div>
  
      <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>