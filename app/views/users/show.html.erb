<label>Name: </label>
<p><%= @user.name %></p>
<label>Password: </label>
<p><%= @user.password_digest %></p>
<label>Role: </label>
<p><%= @user.role %></p>
<label>Created at: </label>
<p><%= @user.created_at %></p>
<label>Updated at: </label>
<p><%= @user.updated_at %></p>

<p><%= link_to 'Edit', edit_user_path(@user) %></p>

<% if current_user.role == "Admin" %>
  <p><%= link_to 'All Users', users_path %></p>
  <%= form_tag user_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <input type=submit value='Delete User'>    
  <% end %>
<% end %>




