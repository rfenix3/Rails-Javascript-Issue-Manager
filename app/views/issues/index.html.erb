<h1>Listing Issues</h1>

<% if @issues.length == 0 %>
    <p> There are no issues at this time. <p>
<% else %>

    <table class="table table-bordered table-responsive table-sm table-hover">
    <thead>
        <tr>
        <td><strong>ID</strong></td>
        <td><strong>Title</strong></td>
        <td><strong>Status</strong></td>
        <td><strong>Owner</strong></td>
        <td><strong>Created</td>
        <td><strong>Effort</td>
        <td><strong>Completion Date</td>
        <td><strong>User ID</td>
        <td><strong>Employee Name</td>        
        <td><strong>Department</td>        
        <td><strong>Delete?</td>

        </tr>
    </thead>
        
    <tbody>
        <% @issues.each do |issue| %>
          <tr>
            <td><a href="issues/<%=issue.id%>/edit"><%= issue.id %></a>
            <td><%= issue.title %></td>
            <td><%= issue.status %></td>
            <td><%= issue.owner %></td>
            <td><%= issue.created %></td>
            <td><%= issue.effort %></td>
            <td><%= issue.completion_date %></td>
            <td><%= issue.user.name %></td>
            <td><%= issue.employee.name %></td>
            <td><%= issue.employee.department %></td>
            <td><a href="/issues/<%=issue.id%>/delete">X</a></td> 
          </tr>
        <% end %>
    </tbody>
    </table>

  <% end%>
<br>

